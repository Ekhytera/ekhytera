generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model tb_usuarios {
  id_usuario        Int      @id @default(autoincrement())
  nome_usuario      String?  @unique @db.Char(45)
  email             String?  @unique  @db.VarChar(100)
  senha             String?  @db.Char(120)
  endereco_imagem   String?  @db.VarChar(100)
  descricao         String?  @db.VarChar(160)
  num_telefone      String?  @db.VarChar(17)
  genero            String?  @db.Char(4)
  localizacao       String?  @db.VarChar(45)
  dt_nascimento     DateTime? @db.Date
  cargo             Cargo?   @default(user)
  status            Int?     @default(1) @db.TinyInt
  criado_em         DateTime @default(now()) @db.Timestamp(0)
  atualizado_em     DateTime @updatedAt @db.Timestamp(0)

  @@map("tb_usuarios")
}

// Enums
enum Cargo {
  user
  admin
}


